    },
    {
      "id": "q02",
      "hotkey": "2",
      "text": "Ist es eine passive Komponente (ohne eigene Logik/Strombedarf)?",
      "attributeKey": "passive_component"
    },
    {
      "id": "q03",
      "hotkey": "3",
      "text": "Ist es ein typisches Element der strukturierten Gebäudeverkabelung (z. B. Patchpanel)?",
      "attributeKey": "structured_cabling_component"
    },
    {
      "id": "q04",
      "hotkey": "4",
      "text": "Hat es primär mit Funk/WLAN zu tun?",
      "attributeKey": "wireless"
    },
    {
      "id": "q05",
      "hotkey": "5",
      "text": "Liegt der Schwerpunkt auf OSI-Layer 2 (MAC/Frames/Switching)?",
      "attributeKey": "layer2_focus"
    },
    {
      "id": "q06",
      "hotkey": "6",
      "text": "Liegt der Schwerpunkt auf OSI-Layer 3 (IP/Routing/Adressierung)?",
      "attributeKey": "layer3_focus"
    },
    {
      "id": "q07",
      "hotkey": "7",
      "text": "Liegt der Schwerpunkt auf OSI-Layer 4 (Ports/Transport)?",
      "attributeKey": "layer4_focus"
    },
    {
      "id": "q08",
      "hotkey": "8",
      "text": "Trennt es Broadcast-Domänen bzw. segmentiert Netze logisch?",
      "attributeKey": "segments_broadcast_domain"
    },
    {
      "id": "q09",
      "hotkey": "9",
      "text": "Vergibt es automatisch IP-Konfiguration an Clients (DHCP-Prinzip)?",
      "attributeKey": "auto_ip_config"
    },
    {
      "id": "q10",
      "hotkey": "10",
      "text": "Löst es Namen in IP-Adressen auf (DNS-Prinzip)?",
      "attributeKey": "name_resolution"
    },
    {
      "id": "q11",
      "hotkey": "11",
      "text": "Übersetzt es private in öffentliche Adressen (NAT-Prinzip)?",
      "attributeKey": "address_translation"
    },
    {
      "id": "q12",
      "hotkey": "12",
      "text": "Ordnet es im lokalen Netz eine IP-Adresse einer MAC-Adresse zu (ARP-Prinzip)?",
      "attributeKey": "ip_to_mac_mapping"
    },
    {
      "id": "q13",
      "hotkey": "13",
