        { "zone": "network", "label": "Netzwerk", "hint": "(LAN/WLAN, Switch/Router)" }
      ],
      "sortCards": [
        { "id": "hw01", "text": "Bestimmt die Verarbeitungsgeschwindigkeit je nach Workload", "correctZone": "cpu" },
        { "id": "hw02", "text": "Flüchtiger Bereich für aktive Prozesse; zu wenig → Paging/Swap", "correctZone": "ram" },
        { "id": "hw03", "text": "Persistente Daten; SSD/HDD als Massenspeicher", "correctZone": "storage" },
        { "id": "hw04", "text": "PCIe-Lanes bestimmen Bandbreite für GPU/NIC/Controller", "correctZone": "mainboard" },
        { "id": "hw05", "text": "Konnektivität: Datenaustausch im LAN/WLAN", "correctZone": "network" },
