  "questions": [
    {
      "id": "q01",
      "hotkey": "1",
      "text": "Gehöre ich zur Systemsoftware (Basis fürs System, nicht primär für Endnutzer-Aufgaben)?",
      "attributeKey": "is_systemsoftware"
    },
    {
      "id": "q02",
      "hotkey": "2",
      "text": "Gehöre ich zur Anwendungssoftware (für konkrete Nutzer-Aufgaben wie Schreiben, Surfen, Arbeiten)?",
      "attributeKey": "is_application_software"
    },
    {
      "id": "q03",
      "hotkey": "3",
      "text": "Bin ich das Betriebssystem selbst (Kernel, Benutzerverwaltung, Ressourcenverwaltung)?",
      "attributeKey": "runs_core_system"
    },
    {
      "id": "q04",
      "hotkey": "4",
      "text": "Bin ich ein Treiber, der Hardware für das System nutzbar macht?",
      "attributeKey": "is_driver"
    },
    {
      "id": "q05",
      "hotkey": "5",
      "text": "Laufe ich im Hintergrund als Dienst/Service (Daemon) dauerhaft mit?",
      "attributeKey": "is_service_daemon"
    },
    {
      "id": "q06",
      "hotkey": "6",
      "text": "Bin ich ein System-Tool für Admin/Diagnose/Verwaltung?",
      "attributeKey": "is_admin_tool"
    },
    {
      "id": "q07",
      "hotkey": "7",
      "text": "Bin ich ein Backup-Agent (Sicherung/Restore, Jobs, Versionen)?",
      "attributeKey": "is_backup_agent"
    },
    {
      "id": "q08",
      "hotkey": "8",
      "text": "Bin ich ein Monitoring-Tool/Agent (Metriken, Logs, Alarme)?",
      "attributeKey": "is_monitoring_tool"
    },
    {
      "id": "q09",
      "hotkey": "9",
      "text": "Bin ich typisch Endnutzer-Software wie Office/Browser/ERP/CRM/IDE?",
      "attributeKey": "is_office_browser_erp_crm_ide"
    },
    {
      "id": "q10",
      "hotkey": "10",
      "text": "Geht es hier primär um Lizenzen/Bezahlmodell statt um Software-Kategorie?",
      "attributeKey": "focus_license_topic"
    },
    {
      "id": "q11",
      "hotkey": "11",
      "text": "Ist die Software proprietär (Quellcode nicht frei, Nutzung stark geregelt)?",
      "attributeKey": "license_proprietary"
    },
    {
      "id": "q12",
      "hotkey": "12",
      "text": "Ist die Software Open Source (Quellcode offen, Lizenz regelt Nutzung/Weitergabe)?",
      "attributeKey": "license_open_source"
    },
    {
      "id": "q13",
      "hotkey": "13",
      "text": "Wird sie typischerweise im Abo-Modell lizenziert (zeitbasiert)?",
      "attributeKey": "license_subscription"
    },
    {
      "id": "q14",
      "hotkey": "14",
      "text": "Wird sie typischerweise per Kauf-Lizenz genutzt (dauerhaft, ohne laufendes Abo)?",
      "attributeKey": "license_purchase"
    }
  ]
}
