  "questions": [
    {
      "id": "q01",
      "hotkey": "1",
      "text": "Braucht es zwingend eine Rechtsgrundlage, damit die Verarbeitung überhaupt erlaubt ist?",
      "attributeKey": "needs_legal_basis"
    },
    {
      "id": "q02",
      "hotkey": "2",
      "text": "Geht es vor allem darum, was als personenbezogen gilt (identifiziert/identifizierbar)?",
      "attributeKey": "defines_personal_data"
    },
    {
      "id": "q03",
      "hotkey": "3",
      "text": "Geht es darum, welche Handlungen alles schon „Verarbeitung“ sind (erheben, speichern, weitergeben …)?",
      "attributeKey": "defines_processing_actions"
    },
    {
      "id": "q04",
      "hotkey": "4",
      "text": "Geht es um die Unterscheidung Anonymisierung vs. Pseudonymisierung?",
      "attributeKey": "distinguishes_anonym_pseudo"
    },
    {
      "id": "q05",
      "hotkey": "5",
      "text": "Gilt die DSGVO bei diesem Thema weiterhin (Personenbezug bleibt bestehen)?",
      "attributeKey": "dsgvo_still_applies"
    },
    {
      "id": "q06",
      "hotkey": "6",
      "text": "Geht es um die „Gebote“ der Verarbeitung (Zweckbindung, Datenminimierung, Speicherbegrenzung …)?",
      "attributeKey": "sets_processing_principles"
    },
    {
      "id": "q07",
      "hotkey": "7",
      "text": "Geht es um die Rolle, die Zwecke und Mittel der Verarbeitung festlegt?",
      "attributeKey": "defines_roles_purpose_means"
    },
    {
      "id": "q08",
      "hotkey": "8",
      "text": "Geht es um einen Dienstleister, der Daten im Auftrag verarbeitet?",
      "attributeKey": "defines_processor_on_behalf"
    },
    {
      "id": "q09",
      "hotkey": "9",
      "text": "Ist dafür typischerweise ein Auftragsverarbeitungsvertrag (AVV) erforderlich?",
      "attributeKey": "requires_av_contract"
    },
    {
      "id": "q10",
      "hotkey": "10",
      "text": "Geht es um die Liste möglicher Rechtsgrundlagen (Einwilligung, Vertrag, Pflicht, berechtigtes Interesse …)?",
      "attributeKey": "deals_with_legal_bases_art6"
    },
    {
      "id": "q11",
      "hotkey": "11",
      "text": "Geht es um Anforderungen an eine wirksame Einwilligung (freiwillig, informiert, widerrufbar, nachweisbar …)?",
      "attributeKey": "specifies_consent_requirements"
    },
    {
      "id": "q12",
      "hotkey": "12",
      "text": "Geht es darum, welche Infos Betroffene bei Datenerhebung bekommen müssen (Wer? Wozu? Wie lange? Rechte?)",
      "attributeKey": "requires_transparency_info"
    },
    {
      "id": "q13",
      "hotkey": "13",
      "text": "Geht es um Rechte wie Auskunft, Löschung, Widerspruch, Datenübertragbarkeit?",
      "attributeKey": "grants_data_subject_rights"
    },
    {
      "id": "q14",
      "hotkey": "14",
      "text": "Geht es um technische und organisatorische Maßnahmen wie MFA, Rollenrechte, Verschlüsselung, Backups, Logging?",
      "attributeKey": "requires_security_toms"
    },
    {
      "id": "q15",
      "hotkey": "15",
      "text": "Geht es um Dokumentation als Pflicht-Artefakt (Verzeichnis der Verarbeitungstätigkeiten)?",
      "attributeKey": "requires_documentation_register"
    },
    {
      "id": "q16",
      "hotkey": "16",
      "text": "Geht es um eine Pflichtprüfung bei hohem Risiko (Datenschutz-Folgenabschätzung vor Go-Live)?",
      "attributeKey": "requires_high_risk_assessment"
    },
    {
      "id": "q17",
      "hotkey": "17",
      "text": "Geht es um Melde-/Benachrichtigungspflichten bei Datenpannen (72 Stunden ab Bekanntwerden)?",
      "attributeKey": "requires_breach_notification"
    },
    {
      "id": "q18",
      "hotkey": "18",
      "text": "Geht es um zusätzliche Garantien bei Übermittlung in Länder außerhalb EU/EWR (z. B. SCC, Angemessenheitsbeschluss)?",
      "attributeKey": "requires_transfer_safeguards"
    }
  ]
}
