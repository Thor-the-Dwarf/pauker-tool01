        {
          "id": "q5-01",
          "text": "1. Worin liegt der Kern-Unterschied: Datenschutz vs Datensicherheit?",
          "options": [
            { "value": "a", "text": "Datenschutz = Technik, Datensicherheit = Recht" },
            { "value": "b", "text": "Datenschutz fokussiert personenbezogene Daten, Datensicherheit schützt alle Infos/Systeme" },
            { "value": "c", "text": "Datensicherheit ist nur für Behörden relevant" }
          ],
          "correct": "b"
        },
        {
          "id": "q5-02",
          "text": "2. Welche Aussage zu Integrität ist korrekt?",
          "options": [
            { "value": "a", "text": "Integrität bedeutet Verschlüsselung" },
            { "value": "b", "text": "Integrität bedeutet: Daten sind korrekt und nicht manipuliert" },
            { "value": "c", "text": "Integrität bedeutet: System ist immer online" }
          ],
          "correct": "b"
        },
        {
          "id": "q5-03",
          "text": "3. Authentisierung vs Autorisierung: Was ist richtig?",
          "options": [
            { "value": "a", "text": "Authentisierung = Was darfst du? Autorisierung = Wer bist du?" },
            { "value": "b", "text": "Authentisierung = Wer bist du? Autorisierung = Was darfst du?" },
            { "value": "c", "text": "Beides ist das gleiche" }
          ],
          "correct": "b"
        },
        {
          "id": "q5-04",
          "text": "4. BSI IT-Grundschutz ist …",
          "options": [
            { "value": "a", "text": "nur für Behörden, Firmen dürfen das nicht nutzen" },
            { "value": "b", "text": "ein methodisches Vorgehen mit Bausteinen/Maßnahmen gegen typische Bedrohungen" },
            { "value": "c", "text": "ein Antivirus-Programm des Bundes" }
          ],
          "correct": "b"
        },
        {
          "id": "q5-05",
          "text": "5. Warum sind Restore-Tests Pflicht?",
          "options": [
            { "value": "a", "text": "Weil Backups sonst illegal sind" },
            { "value": "b", "text": "Weil nur ein getestetes Restore beweist, dass das Backup im Ernstfall funktioniert" },
            { "value": "c", "text": "Weil RAID ohne Restore-Test nicht startet" }
          ],
          "correct": "b"
        },
        {
          "id": "q5-06",
          "text": "6. Welche Maßnahme passt am besten zu „Defense in Depth“?",
          "options": [
            { "value": "a", "text": "Eine einzelne starke Maßnahme reicht immer" },
            { "value": "b", "text": "Mehrere Schichten: organisatorisch + technisch + physisch + personell" },
            { "value": "c", "text": "Nur Firewall, sonst nichts" }
          ],
          "correct": "b"
        }
      ]
