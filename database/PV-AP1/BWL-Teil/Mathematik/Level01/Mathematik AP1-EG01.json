      "sortCards": [
        { "id": "u1", "text": "1 kB = 1.000 Byte", "correctZone": "si" },
        { "id": "u2", "text": "1 KiB = 1.024 Byte", "correctZone": "iec" },
        { "id": "u3", "text": "1 MB = 1.000.000 Byte", "correctZone": "si" },
        { "id": "u4", "text": "1 MiB = 1.048.576 Byte (1024²)", "correctZone": "iec" },
